# Server Configuration
PORT=3000
NODE_ENV=production

# Idena Node RPC
# Use your own node or a community node:
# - http://localhost:9009 (your own node)
# - https://rpc.idio.network
# - https://rpc.holismo.org
IDENA_RPC_URL=http://localhost:9009

# Optional: API key for your Idena node (if configured)
IDENA_API_KEY=

# Redis Configuration
# URL format: redis://localhost:6379 or redis://:password@localhost:6379
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=true
# Optional: Redis password (if not included in REDIS_URL)
REDIS_PASSWORD=

# Cache TTL in seconds (default: 5 minutes)
CACHE_TTL=300

# Historical Sync Configuration
# Enable/disable historical blockchain sync to SQLite
HISTORY_ENABLED=true
# Path to SQLite database file
SQLITE_PATH=./data/history.db
# Number of blocks per sync batch (default: 500)
SYNC_BATCH_SIZE=500
# Delay between batches in ms (default: 1000)
SYNC_INTERVAL=1000
# Number of parallel RPC requests (default: 20)
SYNC_CONCURRENCY=20
